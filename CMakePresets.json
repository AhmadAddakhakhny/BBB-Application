{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "x86-linux-gcc-debug",
      "displayName": "x86_64 Debug (Native Linux Machine)",
      "description": "Build for host with Debug flags",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/builds/x86/debug/",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "WARNINGS_ENABLED": "ON"
      }
    },
    {
      "name": "arm-linux-gcc-debug",
      "displayName": "ARMv7 Debug (BeagleBone Black)",
      "description": "Cross-compile for ARM using toolchain file",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/builds/arm/debug",
      "toolchainFile": "cmake/toolchain-arm.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "WARNINGS_ENABLED": "ON"
      }
    },
    {
      "name": "arm-linux-gcc-release",
      "displayName": "ARMv7 Release (BeagleBone Black)",
      "description": "Cross-compile for ARM using toolchain file",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/builds/arm/release",
      "toolchainFile": "cmake/toolchain-arm.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "WARNINGS_ENABLED": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "x86-linux-gcc-debug",
      "configurePreset": "x86-linux-gcc-debug"
    },
    {
      "name": "arm-linux-gcc-debug",
      "configurePreset": "arm-linux-gcc-debug"
    },
    {
      "name": "arm-linux-gcc-release",
      "configurePreset": "arm-linux-gcc-release"
    }
  ]
}