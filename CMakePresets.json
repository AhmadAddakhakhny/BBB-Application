{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "x86-linux-gcc-debug",
      "displayName": "x86_64 Debug (Native Linux Machine)",
      "description": "Build for host with Debug flags",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "BUILD_SOURCES": "ON",
        "WARNINGS_ENABLED": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x86-linux-gcc-debug-tests",
      "displayName": "x86_64 Debug-test (Native Linux Machine)",
      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "WARNINGS_ENABLED": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "ADDRESS_SANITIZER_ENABLED": "ON"
      }
    },
    {
      "name": "arm-linux-gcc-debug",
      "displayName": "ARMv7 Debug (BeagleBone Black)",
      "description": "Cross-compile for ARM using toolchain file",
      "generator": "Unix Makefiles",
      "toolchainFile": "cmake/toolchain-arm.cmake",
      "cacheVariables": {
        "BUILD_SOURCES": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "WARNINGS_ENABLED": "ON"
      }
    },
    {
      "name": "arm-linux-gcc-release",
      "displayName": "ARMv7 Release (BeagleBone Black)",
      "description": "Cross-compile for ARM using toolchain file",
      "generator": "Unix Makefiles",
      "toolchainFile": "cmake/toolchain-arm.cmake",
      "cacheVariables": {
        "BUILD_SOURCES": "ON",
        "CMAKE_BUILD_TYPE": "Release",
        "WARNINGS_ENABLED": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "x86-linux-gcc-debug",
      "configurePreset": "x86-linux-gcc-debug"
    },
    {
      "name": "arm-linux-gcc-debug",
      "configurePreset": "arm-linux-gcc-debug"
    },
    {
      "name": "arm-linux-gcc-release",
      "configurePreset": "arm-linux-gcc-release"
    },
    {
      "name": "x86-linux-gcc-debug-tests",
      "configurePreset": "x86-linux-gcc-debug-tests"
    }
  ],

  "testPresets": [
    {
      "name": "x86-linux-gcc-debug-tests",
      "description": "Run GoogleTest-based tests via CTest on the native host",
      "configurePreset": "x86-linux-gcc-debug-tests",
      "output": {
        "shortProgress": true,
        "outputOnFailure": true,
        "verbosity": "default"
      }
    }
  ]
}